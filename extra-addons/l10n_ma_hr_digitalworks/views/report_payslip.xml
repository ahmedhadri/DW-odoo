<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

            <!-- Inherit payslip report -->
            <template id="report_payslip_inherited" inherit_id="hr_payroll.report_payslip">

                <xpath expr="//table[@class='table table-condensed table-bordered']//tr[3]//td[3]" position="replace">
                            <td><strong>No Matricule DW</strong></td>
                </xpath>
                <xpath expr="//table[@class='table table-condensed table-bordered']//tr[3]//td[4]" position="replace">
                            <td><span t-field="o.employee_id.matricule_dw"/></td>
                </xpath>

                <xpath expr="//table[@class='table table-condensed table-bordered']//tr[4]//td[4]" position="replace">
                        <td><span t-field="o.employee_id.account_bank_number"/></td>
                </xpath>

                <!-- Inherit payslip report -->

                <xpath expr="//table[@class='table table-condensed']/thead/tr/th[2]" position="replace">
                        <th>LIBELLE</th>
                </xpath>

                <xpath expr="//table[@class='table table-condensed']/thead/tr/th[3]" position="replace">
                        <th>Nbre ou Base</th>
                </xpath>

                <xpath expr="//table[@class='table table-condensed']/thead/tr/th[4]" position="replace">
                        <th>TAUX</th>
                </xpath>

                <xpath expr="//table[@class='table table-condensed']/tbody/tr" position="attributes">
                        <attribute name="t-if">line.total != 0</attribute>
                </xpath>

            </template>

    </data>
</odoo>