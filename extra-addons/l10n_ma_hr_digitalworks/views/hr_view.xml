<?xml version="1.0" encoding="utf-8"?>

<odoo>

        <menuitem
            action="hr.action_hr_job"
            id="menu_hr_job"
            parent="hr.menu_human_resources_configuration"
        />


        <record model="ir.ui.view" id="hr_employee_form_extension">
            <field name="name">hr.employee form extension</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <div class="oe_title">
                        <label for="matricule_dw" class="oe_edit_only"/>
                        <h1>
                            <field name="matricule_dw" readonly="True"/>
                        </h1>
                    </div>
                    <div class="oe_title">
                        <label for="matricule_dw_bcp" class="oe_edit_only"/>
                        <h1>
                            <field name="matricule_dw_bcp" placeholder="Maticule DW BCP"/>
                        </h1>
                    </div>
                </xpath>

		        <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

		        <xpath expr="//field[@name='calendar_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
		
                <xpath expr="//field[@name='department_id']" position="before">
                            <field name="dw_company_id" options="{'no_create': True}"/>
                </xpath>

                <xpath expr="//field[@name='address_home_id']" position="after">
                            <field name="adresse_personnelle"/>
                            <field name="ville_personnelle"/>
                </xpath>

                <xpath expr="//field[@name='address_home_id']" position="attributes">
                            <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='identification_id']" position="attributes">
                            <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='passport_id']" position="after">
                            <field name="date_expiration_passport"/>
                            <field name="cin"/>
                            <field name="date_expiration_cin"/>
                            <field name="num_carte_sejour"/>
                            <field name="date_expiration_carte_sejour"/>
                            <field name="type_carte_sejour"/>
                </xpath>

                <xpath expr="//notebook/page[2]/group/group[2]" position="after">
                                   <group string="Numéro de Compte Bancaire">
                                        <field name="account_bank_number"/>
                                        <field name="bank_id"/>
                                    </group>
                </xpath>

                <xpath expr="//notebook/page[2]/group/group[3]" position="after">
                                   <group string="Numéros d'affiliation">
                                        <field name="matricule_cnss"/>
                                        <field name="matricule_cimr"/>
                                        <field name="matricule_mut"/>
                                    </group>
                </xpath>
		

                <xpath expr="//notebook/page[2]" position="after">
                    <page string="Documents Administratifs">
                        <group>
                            <group string="Documents Administratif">
                                <field name="has_cin"/>
                                <field name="has_carte_sejour"/>
                                <field name="has_photos"/>
                                <field name="has_passport"/>
                                <field name="has_fiche_anthropometrique"/>
                                <field name="has_radio_pulmonaire"/>
                                <field name="has_justif_salaire"/>
                                <field name="has_rib"/>
                                <field name="has_stc"/>
                                <field name="has_cnss"/>
                                <field name="has_attestation_travail"/>
                                <field name="has_diplome"/>
                            </group>
                            <group string="Dates Dépôts">
                                <field name="date_depot_cin"/>
                                <field name="date_depot_carte_sejour"/>
                                <field name="date_depot_photos"/>
                                <field name="date_depot_passport"/>
                                <field name="date_depot_fiche_anthropometrique"/>
                                <field name="date_depot_radio_pulmonaire"/>
                                <field name="date_depot_justif_salaire"/>
                                <field name="date_depot_rib"/>
                                <field name="date_depot_stc"/>
                                <field name="date_depot_cnss"/>
                                <field name="date_depot_attestation_travail"/>
                                <field name="date_depot_diplome"/>
                            </group>
                            <group string="Conjoint" attrs="{'invisible':[('marital', '!=', 'married')]}">
                                <field name="has_conjoint_actmariage"/>
                                <field name="has_conjoint_cin"/>
                                <field name="has_conjoint_attestation_travail"/>
                                <field name="has_cojoint_cnss"/>
                            </group>
                            <group string="Dates Dépôts" attrs="{'invisible':[('marital', '!=', 'married')]}">
                                <field name="date_depot_conjoint_actmariage"/>
                                <field name="date_depot_conjoint_cin"/>
                                <field name="date_depot_conjoint_attestation_travail"/>
                                <field name="date_depot_cojoint_cnss"/>
                            </group>
                            <group string="Enfants" attrs="{'invisible':[('children', '=', 0)]}">
                                <field name="has_enfant_actnaissance"/>
                                <field name="has_enfant_cert_vie"/>
                                <field name="has_enfant_cert_scol"/>
                                <field name="has_enfant_cert_alloc"/>
                            </group>
                            <group string="Dates Dépôts" attrs="{'invisible':[('children', '=', 0)]}">
                                <field name="date_depot_enfant_actnaissance"/>
                                <field name="date_depot_enfant_cert_vie"/>
                                <field name="date_depot_enfant_cert_scol"/>
                                <field name="date_depot_enfant_cert_alloc"/>
                            </group>

                        </group>
                    </page>
                </xpath>


                <xpath expr="//notebook/page[4]" position="after">
                    <page string="Suivi Administratif Collaborateur">
                        <group>
                            <group string="Contrat Travail">
                                <field name="contract_remis_pr_sign"/>
                                <field name="contract_recu_sign_leg"/>
                                <field name="contract_en_cours_sign"/>
                                <field name="contract_remis_sign"/>
                            </group>
                            <group string="Dates importantes">
                                <field name="date_contract_remis_pr_sign"/>
                                <field name="date_contract_recu_sign_leg"/>
                                <field name="date_contract_en_cours_sign"/>
                                <field name="date_contract_remis_sign"/>
                            </group>

                            <group string="Chartes">
                                <field name="rgl_remis_au_col"/>
                                <field name="faute_grave"/>
                                <field name="charte_info_remis"/>
                                <field name="regl_recu_sign"/>
                                <field name="faute_grave_recu_sign"/>
                                <field name="charte_info_recu_sign"/>
                            </group>
                            <group string="Dates importantes">
                                <field name="date_rgl_remis_au_col"/>
                                <field name="date_faute_grave"/>
                                <field name="date_charte_info_remis"/>
                                <field name="date_regl_recu_sign"/>
                                <field name="date_faute_grave_recu_sign"/>
                                <field name="date_charte_info_recu_sign"/>
                            </group>

                        </group>
                    </page>
                </xpath>

                 <xpath expr="//notebook/page[5]" position="after">
                    <page string="CNSS-SAHAM">
                        <group>
                            <group string="CNSS">
                                <field name="form_remis_pr_sign"/>
                                <field name="form_transmis_cnss"/>
                                <field name="carte_recu"/>
                                <field name="matr_cnss_recu"/>
                                <field name="carte_remise"/>
                            </group>
                            <group string="Dates importantes">
                                <field name="date_form_remis"/>
                                <field name="date_form_transmis"/>
                                <field name="date_carte_recu"/>
                                <field name="date_matr_cnss_recu"/>
                                <field name="date_carte_remise"/>
                            </group>

                            <group string="SAHAM">
                                <field name="bds_remis"/>
                                <field name="bds_recu"/>
                                <field name="bds_transmis_saham"/>
                                <!--<field name="photo_transmis_securt"/>-->
                            </group>
                            <group string="Dates importantes">
                                <field name="date_bds_remis"/>
                                <field name="date_bds_recu"/>
                                <field name="date_bds_transmis_saham"/>
                                <!--<field name="date_photo_transmis_securt"/>-->
                            </group>

                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- hr.dw.grade -->
        <record id="view_hr_dw_grade_form" model="ir.ui.view">
            <field name="name">hr.emp.dw.grade.form</field>
            <field name="model">hr.employee.dw.grade</field>
            <field name="arch" type="xml">
                <form string="Grade">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="employee_category_data">
                            <group>
                                <field name="salaire_net"/>
                                <field name="salaire_base"/>
                            </group>
                            <group>
                                <field name="indimnite_transport"/>
                                <field name="indimnite_panier"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- hr.dw.category -->
        <record id="view_hr_dw_category_form" model="ir.ui.view">
            <field name="name">hr.emp.dw.category.form</field>
            <field name="model">hr.employee.dw.category</field>
            <field name="arch" type="xml">
                <form string="Catégorie Employé">
                    <group col="4">
                        <field colspan="4" name="name"/>
                    </group>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="hr_employee_form_extension_2">
            <field name="name">hr.employee form extension 2</field>
            <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2"/>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='bank_account_id']" position="attributes">
                        <attribute name="invisible">True</attribute>
                    </xpath>
                    <xpath expr="//field[@name='children']" position="attributes">
                            <attribute name="attrs">{'invisible': [('marital', '=', 'single')]}</attribute>
                    </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_employee_form_extension_3">
            <field name="name">hr.employee form extension 3</field>
            <field name="inherit_id" ref="hr_holidays.view_employee_form_leave_inherit"/>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">

                <xpath expr="//group/label" position="before">
                        <label for="leaves_count"/>
                        <div>
                            <field name="leaves_count" class="oe_inline"/> jours
                        </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_employee_kanban_extension">
                <field name="name">hr.employee kanban extension</field>
                <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
                <field name="model">hr.employee</field>
                <field name="arch" type="xml">
                        <xpath expr="//field[@name='name']" position="after">
                            <ul><li><field name="matricule_dw"/></li></ul>
                        </xpath>
                </field>
        </record>


        <record id="view_hr_dw_grade_tree" model="ir.ui.view">
            <field name="name">hr.emp.dw.grade.tree</field>
            <field name="model">hr.employee.dw.grade</field>
            <field name="arch" type="xml">
                <!--<tree string="Grade" decoration-bf="message_needaction==True">-->
                <tree string="Grade">
                    <field name="name"/>
                    <field name="salaire_base"/>
                    <field name="salaire_net"/>
                    <field name="indimnite_transport"/>
                    <field name="indimnite_panier"/>
                </tree>
            </field>
        </record>


        <record id="action_hr_emp_dw_grade" model="ir.actions.act_window">
            <field name="name">Grade Employé DW </field>
            <field name="res_model">hr.employee.dw.grade</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new Grade Employee.
              </p><p>
                Job Positions are used to define jobs and their requirements.
                You can keep track of the number of employees you have per job
                position and follow the evolution according to what you planned
                for the future.
              </p><p>
                You can attach a survey to a job position. It will be used in
                the recruitment process to evaluate the applicants for this job
                position.
              </p>
            </field>
        </record>
    <record id="action_hr_emp_dw_category" model="ir.actions.act_window">
            <field name="name">Catégorie Employé</field>
            <field name="res_model">hr.employee.dw.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new Category Employee.
              </p><p>
                Category Employee are used to define categories of employees.
                You can keep track of the number of employees you have per category
                and follow the evolution according to what you planned
                for the future.
              </p>
            </field>
        </record>

        <menuitem
            action="action_hr_emp_dw_grade"
            id="menu_hr_dw_grade_job"
            parent="hr.menu_human_resources_configuration"
        />
        <menuitem
                action="action_hr_emp_dw_category"
                id="menu_hr_dw_category_employee"
                parent="hr.menu_human_resources_configuration"
            />



</odoo>
